<div class="container">
  <h2 class="text-center">Войти</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-3">
      <%= f.label :email, "Email адресс", for: "email", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email" %>
      <div class="form-text">Мы не распространяем вашу почту посторонним лицам</div>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Пароль", for: "password", class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
        <%= f.label :remember_me, "Запомнить меня", for: "remember_me", class: "form-check-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Войти", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>