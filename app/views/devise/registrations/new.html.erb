<div class="container">
  <h2 class="text-center">Зарегистрироваться</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email, "Email адресс", for: "email", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "email" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Пароль", for: "password", class: "form-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> минимум символов)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "password" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Подтверждение пароля", for: "password_confirmation", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "password_confirmation" %>
    </div>

    <div class="actions">
      <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>

</div>