<div class="container">
  <h2>Настройки</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>На данный момент ждём подтверждение от: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="mb-3">
      <%= f.label :password, "Новый пароль" %> <i><% if @minimum_password_length %><em><%= @minimum_password_length %> минимум символов</em><% end %> (оставьте поле пустым, если не хотите менять)</i><br />
      <%= f.password_field :password ,autocomplete: "new-password", class: "form-control" %>
      
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, "Подтверждение пароля" %><br />
      <%= f.password_field :password_confirmation,autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :current_password, "Текущий пароль" %> <i>(нам нужен ваш текущий пароль чтобы подтвердить изменения)</i><br />
      <%= f.password_field :current_password ,autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="form-check">
      <%= f.radio_button :subscription_type, "none", class: "form-check-input" %>
      <%= f.label :subscription_type, "Отказаться от рассылки", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :subscription_type, "daily", class: "form-check-input" %>
      <%= f.label :subscription_type, "Ежедневная рассылка", class: "form-check-label" %>
    </div>
    <div class="form-check">
      <%= f.radio_button :subscription_type, "weekly", class: "form-check-input" %>
      <%= f.label :subscription_type, "Еженедельная рассылка", class: "form-check-label" %>
    </div>

    <%= f.submit "Обновить", class: "btn btn btn-info text-white" %>

  <% end %>

  <div class="d-flex justify-content-center align-items-center">
    <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: "btn btn-outline-danger border-0" %>
  </div>
  
</div>